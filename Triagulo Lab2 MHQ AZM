#include<iostream>
#include<stdlib.h>
#include<math.h>
#define PI 3.1415926536

using namespace std;

int main()
{

	int a, b, c, d, e, f;
	float j, h, Area, P;
	float A, B, C;
	double x, y, z,S;
	double M1,M2,M3;
	
	cout<<"\nLab#2 Huallpa Quino Mauricio Rodrigo \n";
	cout<<"      Zambrana Morales Ana Paola \n";
	cout<<"a). Resolucion de triangulos \n";
	do
	{
		cout<< "introduzca el numero correspondiente a la operacion que desea \n";
