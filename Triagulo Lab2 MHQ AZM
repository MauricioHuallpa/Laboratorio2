				cout<< "para determinar su longitud mediante la formula de la mediana \n";
				cout<< "Elija la Mediana respecto a que Lado quiere encontrar\n";
				cout<< "1- M1(respecto a A)\n";
				cout<< "2- M2(respecto a B)\n";
				cout<< "3- M3(respecto a C)\n";
				cin>> e;
				
				switch(e)
				{
					case 1:
						cout<<"Para calcular M1 respecto a A necesitamos todos los lados \n";
						cout<<"A:" ; cin>> A;
						cout<<"B:" ; cin>> B;
						cout<<"C:" ; cin>> C;
						M1= ((sqrt(2*((B*B)+(C*C))-(A*A)))/2);
						cout<<"El valor de la Madiana respecto a A es : "<<M1<<endl;
						
						cout<<"Desea hacer otra operacion?\n";
						cout<<"\n1- SI";
						cout<<"\n2- NO";
						cout<<"\n";
						cin>> b;
						cout<< "\n";
						if (b ==1)
						{
							return main();	
						}
						else;
						{
							return 0;	
						}
						
					case 2:
						cout<<"Para calcular M2 respecto a B necesitamos todos los lados \n";
						cout<<"A:" ; cin>> A;
						cout<<"B:" ; cin>> B;
						cout<<"C:" ; cin>> C;
						M2= ((sqrt(2*((A*A)+(C*C))-(B*B)))/2);
						cout<<"El valor de la Madiana respecto a B es : "<<M2<<endl;
						
						cout<<"Desea hacer otra operacion?\n";
						cout<<"\n1- SI";
						cout<<"\n2- NO";
						cout<<"\n";
						cin>> b;
						cout<< "\n";
						if (b ==1)
						{
							return main();	
						}
						else;
						{
							return 0;	
						}
					case 3:
						cout<<"Para calcular M3 respecto a C necesitamos todos los lados \n";
						cout<<"A:" ; cin>> A;
						cout<<"B:" ; cin>> B;
						cout<<"C:" ; cin>> C;
						M3= (sqrt(2*((A*A)+(B*B))-(C*C)))/2;
						cout<<"El valor de la Madiana respecto a C es : "<<M3<<endl;
						
						cout<<"Desea hacer otra operacion?\n";
						cout<<"\n1- SI";
						cout<<"\n2- NO";
						cout<<"\n";
						cin>> b;
						cout<< "\n";
						if (b ==1)
						{
							return main();	
						}
						else;
						{
							return 0;	
						}
					
				}
				
			case 6:
				cout<< "Seguro que quieres Salir...?? \n";
				cout<< "\n1- SI";
				cout<< "\n2- NO\n";
				cin>> f;
				cout<< "\n";
				if (f ==1)
				{
					return 0;
				}
				else;
				{
					return main();
				}
				break;
				return main();
				break;
			}
		}
	while(a!=5);
	system("pause");
	return main();
	}
