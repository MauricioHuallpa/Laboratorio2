						cout<<"Para determinar el Area de un triangulo nececitamos \n";
						cout<<"dos lados (A y B) y el angulo z que los separa\n";
						cout<<"A:" ; cin>> A;
						cout<<"B:" ; cin>> B;
						cout<<"z(angulo en sexagesimal):" ; cin>> z;
						Area= (A*B*sin(z*PI/180))/2;
						cout<<"El valor del Area es : "<<Area<<endl;
						
						cout<<"Desea hacer otra operacion?\n";
						cout<<"\n1- SI";
						cout<<"\n2- NO";
						cout<<"\n";
						cin>> b;
						cout<< "\n";
						if (b ==1)
						{
							return main();	
						}
						else;
						{
							return 0;	
						}
					case 3:
						cout<<"Para determinar el Area de un triangulo por la Formula de Heron \n";
						cout<<"necesitamos los 3 lados del triangulo\n";
						cout<<"A:" ; cin>> A;
						cout<<"B:" ; cin>> B;
						cout<<"C:" ; cin>> C;
						S=(A+B+C)/2;
						Area=sqrt(S*(S-A)*(S-B)*(S-C));
						cout<<"El valor del Area es : "<<Area<<endl;
						
						cout<<"Desea hacer otra operacion?\n";
						cout<<"\n1- SI";
						cout<<"\n2- NO";
						cout<<"\n";
						cin>> b;
						cout<< "\n";
						if (b ==1)
						{
							return main();	
						}
						else;
						{
							return 0;	
						}
				}

			case 4:
				cout<< "Para calcular el perimetro necesitamos los 3 Lados \n";
				cout<<"A:" ; cin>> A;
				cout<<"B:" ; cin>> B;
				cout<<"C:" ; cin>> C;
				P=(A+B+C);
				cout<<"El valor del Perimetro es : "<<P<<endl;
				
				cout<<"Desea hacer otra operacion?\n";
				cout<<"\n1- SI";
				cout<<"\n2- NO";
				cout<<"\n";
				cin>> b;
				cout<< "\n";
