			case 1:
				cout<< "Para la ley de cosenos necesitamos 2 lados (A y B) \n";
				cout<< "y el angulo x que separa a estos para encontrar el lado C \n";
				cout<< " A :"; cin>> A;
				cout<< " B :"; cin>> B;
				cout<< " x(angulo en sexagesimales) :"; cin>> x;
				
				C=sqrt((A*A)+(B*B)-2*A*B*cos(x*PI/180));
				
				cout<< "\n El lado C vale :  "<<C<<endl;
				
				cout<<"Desea hacer otra operacion?\n";
				cout<<"\n1- SI";
				cout<<"\n2- NO";
				cout<<"\n";
				cin>> b;
				cout<< "\n";
				if (b ==1)
				{
					return main();
				}
				else;
				{
					return 0;
				}
					
			case 2:
				cout<< "Para la ley de senos necesitamos inicialmente un lado A y su \n";
				cout<< "angulo opuesto 'x' , tambien el lado B o el angulo 'y'que queremos \n";
				cout<< "\nQue dato pondra?\n";
				cout<< "1- Lado B \n";
				cout<< "2- Angulo 'y'\n";
				cin>>c;
				cout<< "\n";
				if (c ==1)
				{
					cout<<"introdusca el Lado B para hallar el angulo 'y'\n";
					cout<< " B :"; cin>> B;
					cout<< " A :"; cin>> A;
					cout<< " x(angulo en sexagesimal):"; cin>> x;
					y=(B/A)*sin(x*PI/180);
					cout<< "\n El sen(y) vale :  "<<y<<endl;
					
					cout<<"Desea hacer otra operacion?\n";
					cout<<"\n1- SI";
					cout<<"\n2- NO";
					cout<<"\n";
					cin>> b;
					cout<< "\n";
					if (b ==1)
					{
						return main();
					}
					else;
					{
						return 0;
					}
				}
				else;
				{
					cout<<"introdusca el angulo 'y' para hallar en Lado B\n";
					cout<< " y(angulo en sexagesimales) :"; cin>> y;
					cout<< " A :"; cin>> A;
					cout<< " x(angulo en sexagesimal):"; cin>> x;
					B=((sin(y*PI/180))/(sin(x*PI/180)))*A;
					cout<< "\n El Lado B vale :  "<<B<<endl;
					
					cout<<"Desea hacer otra operacion?\n";
					cout<<"\n1- SI";
					cout<<"\n2- NO";
					cout<<"\n";
					cin>> b;
					cout<< "\n";
					if (b ==1)
					{
						return main();
					}
					else;
					{
						return 0;
					}			
				}
				
			case 3:
				cout<< "Que metodo quiere usar para calcular el area\n";
				cout<< "1- Base por altura\n";
				cout<< "2- 1 angulo y 2 lados conocidos\n";
				cout<< "3- Formula de Heron\n";
				cin>> d;
				
				switch(d)
				{
					case 1:
						cout<<"Para determinar el Area de un triangulo nececitamos \n";
						cout<<"la base 'j' y la altura 'h'\n";
						cout<<"j:" ; cin>> j;
						cout<<"h:" ; cin>> h;
						Area= (j*h)/2;
						cout<<"El valor del Area es : "<<Area<<endl;
						
						cout<<"Desea hacer otra operacion?\n";
						cout<<"\n1- SI";
						cout<<"\n2- NO";
						cout<<"\n";
						cin>> b;
						cout<< "\n";
						if (b ==1)
						{
							return main();	
						}
						else;
						{
							return 0;	
